<div class="payments">
  <h1>Selecione a bandeira do seu cartão: <%= @bank %></h1>
  <fieldset class="banks">
    <ol>
      <% CreditCard::BANKS_OPTIONS.each do |bank| %>
        <li class='<%= "#{bank}" %>'>
          <%= radio_button_tag "credit_card[bank]", bank, @bank == bank ? true : false  %>
          <%= label_tag "credit_card_bank_#{bank}", bank %>
        </li>
      <% end %>
    </ol>
  </fieldset>
  <h1>Número de parcelas:</h1>
  <fieldset class="payments">
    <ol>
      <li>
        <% options = build_installment_options(@cart_service.total, CreditCard.installments_number_for(@cart_service.total)) %>
        <%= select_tag "credit_card[payments]", options_for_select(options, @installments), :class => "custom_select" %>
      </li>
    </ol>
  </fieldset>
</div>

<div class="credit_cart_payment">
  <fieldset class="inputs">
    <ol>
      <li class="user_name">
        <%= f.label :user_name %>
        <%= f.text_field :user_name %>
      </li>
      <li class="credit_card_number">
        <%= f.label :credit_card_number %>
        <%= f.text_field :credit_card_number, :class => "credit_card", :autocomplete => "off" %>
      </li>
      <li class="security_code">
        <%= f.label :security_code %>
        <%= f.text_field :security_code, :class => "security_code" %>
      </li>
      <li class="expiration_date">
        <%= f.label :expiration_date %>
        <%= f.text_field :expiration_date, :class => "expiration_date" %>
      </li>
      <li class="user_identification">
        <%= f.label :user_identification %>
        <%= f.text_field :user_identification, :class => "user_identification" %>
      </li>
      <li class="user_birthday">
        <%= f.label :user_birthday %>
        <%= f.text_field :user_birthday, :class => "date" %>
      </li>
      <li class="telephone">
        <%= f.label :telephone %>
        <%= f.text_field :telephone, :class => 'phone', :placeholder => '(  )' %>
      </li>
    </ol>
  </fieldset>
</div>
