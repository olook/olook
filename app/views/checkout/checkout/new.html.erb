<% content_for :head do %>
  <%= stylesheet_link_tag "section/checkout" %>
<% end %>

<section id="payment" class="checkout">
  <% if @user.cpf.nil? %>
    <%= form_for(@user, :as => :user, :url => cart_checkout_path, :html => { :method => :put, :class => 'cpf' }) do |f| %>
      <fieldset class="buttons">
        <ol>
          <li>
            <p>Precisamos de seu CPF para emitir a nota fiscal do seu pedido em seu nome:</p>
          </li>
          <li>
            <%= f.label :cpf %>
            <%= f.text_field :cpf, :value => "", :class => "cpf" %>
            <%= f.submit '', :class => "save" %>
          </li>
        </ol>
      </fieldset>
    <% end %>
  <% end %>
  <section class="main">
    <h1>Escolha uma forma de pagamento</h1>
    <%= render :partial => "payment_methods" %>
  </section>
  <section class="sidebar">
    <% content_for :checkout_sidebar do %>
      <%= render :partial => "shared/payments/info_address", :locals => { :cart => @cart, :cart_service => @cart_service, :has_payment => false } %>
    <% end %>
    <%= render "shared/payments/info_sidebar", :cart => @cart, :cart_service => @cart_service, :has_payment => false %>
  </section>
</section>
