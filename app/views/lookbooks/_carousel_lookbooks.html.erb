<div id="carousel_lookbooks">
  <ul>

    <% lookbooks.each do |lookbook| %>
      <li>
        <%= link_to "/lookbooks/show/#{lookbook.name}" do %>
          <%= image_tag lookbook.thumb_image.try(:url), :alt => "#{lookbook.name}" %>
          <h1><%= lookbook.name %></h1>
        <% end %>
      </li>
    <% end %>

    <li>
      <%= link_to verao_path do %>
        <%= image_tag "lookbooks/verao.jpg", :alt => "Verão" %>
        <h1>Verão</h1>
      <% end %>
    </li>
    <li>
      <%= link_to militar_path do %>
        <%= image_tag "lookbooks/militar.jpg", :alt => "Militar" %>
        <h1>Militar</h1>
      <% end %>
    </li>
    <li>
      <%= link_to scarpin_glamour_path do %>
        <%= image_tag "lookbooks/scarpin_glamour.jpg", :alt => "Scarpin Glamour" %>
        <h1>Scarpin Glamour</h1>
      <% end %>
    </li>
    <li>
      <%= link_to fashion_path do %>
        <%= image_tag "lookbooks/fashion.jpg", :alt => "Fashion" %>
        <h1>Fashion</h1>
      <% end %>
    </li>
    <li>
      <%= link_to vintage_path do %>
        <%= image_tag "lookbooks/vintage.jpg", :alt => "Vintage" %>
        <h1>Vintage</h1>
      <% end %>
    </li>
    <li>
      <%= link_to safari_path do %>
        <%= image_tag "lookbooks/safari.jpg", :alt => "Safari" %>
        <h1>Safari</h1>
      <% end %>
    </li>
    <li>
      <%= link_to palha_path do %>
        <%= image_tag "lookbooks/palha.jpg", :alt => "Palha" %>
        <h1>Palha</h1>
      <% end %>
    </li>
    <li>
      <%= link_to lets_party_path do %>
        <%= image_tag "lookbooks/lets-party.jpg", :alt => "Let's party" %>
        <h1>Let's Party</h1>
      <% end %>
    </li>
  </ul>
  <%= link_to "Anterior", "javascript:void(0);", :class => "prev-lookbook" %>
  <%= link_to "Próximo", "javascript:void(0);", :class => "next-lookbook" %>
</div>
