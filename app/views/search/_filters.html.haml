- Category.each_translation do |category_human|
  - if (_filters = subcategory_filters_by(category_human, search)) && _filters.present?
    .filter
      %p.title-category= category_human
      %ul.subcategory-list
        - _filters.each do |text, amount|
          %li= filter_link_to(search_path(@url_builder.add_filter(:subcategory, text)), text.chomp, search.filter_selected?(:subcategory, text.chomp))

- if (_filters = filters_by("heel", search)) && _filters.present?
  .filter
    %p.title-category Salto
    %ul.category-list
      - heels(_filters).each do |heel_range|
        %li= filter_link_to(search_path(@url_builder.add_filter(:heel, heel_range)), heel_label_for(heel_range), search.filter_selected?(:heel, heel_range))
      %li= link_to("Limpar Filtro", catalog_path(category, @url_builder.remove_filter_of(:heel)), :class => "clean") if search.filter_value(:heel).present?


- if (_filters = filters_by("color", search)) && _filters.present?
  .filter
    %p.title-category Cores
    %ul.category-list.cores
      - filters_by("color", search, use_fields: [:category]).each do |text, amount|
        %li{:class => text.chomp.parameterize}= filter_link_to(search_path(@url_builder.add_filter(:color, text)), text.chomp, search.filter_selected?(:color, text.chomp))
      %li= link_to("Limpar Filtro", @url_builder.remove_filter_of(:color), :class => "clean") if search.filter_value(:color).present?


