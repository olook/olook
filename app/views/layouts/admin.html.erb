<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8">
    <title>Olook Admin</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "admin" %>
    <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" %>
    <% javascript_include_tag "application" %>
    <%= javascript_include_tag "admin" %>
    <%= yield :head %>
  </head>
  <body>
    <div id="container">
      <div id="header">
        <h1><a href="/admin">olook Admin</a></h1>
        <div id="user-navigation">
          <ul class="wat-cf">
            <% if admin_signed_in? %>
              <li>Welcome <%= "#{current_admin.first_name} #{current_admin.last_name}" %></li>
              <li><%= link_to "Logout", destroy_admin_session_path, :class => 'logout', :method => :delete %></li>
            <% end %>
          </ul>
        </div>
        <div id="main-navigation">
          <ul class="wat-cf">
            <li class="submenu<%= ' active' if params[:controller] =~ /users/ %>">
              <span>Customers</span>
              <ul>
                <li><%= access_link("Users") %></li>
                <li><%= access_link("Credits") %></li>
              </ul>
            </li>
            <li class="submenu<%= ' active' if params[:controller] =~ /orders|shipping/ %>">
              <span>Sales</span>
              <ul>
                <li><%= access_link("Orders") %></li>
                <li><%= access_link("Shipping Services") %></li>
              </ul>
            </li>
            <li class="submenu<%= ' active' if params[:controller] =~ /collections|moments|products/ %>">
              <span>Products</span>
              <ul>
                <li><%= access_link("Collections") %></li>
                <li><%= access_link("Moments") %></li>
                <li><%= access_link("Products") %></li>
              </ul>
            </li>
            <li class="submenu<%= ' active' if params[:controller] =~ /promotions|liquidation|coupons|landing|lookbooks/ %>">
              <span>Promo</span>
              <ul>
                <li><%= access_link("Promotions")%></li>
                <li><%= access_link("Liquidations")%></li>
                <li><%= access_link("Coupons") %></li>
                <li><%= access_link("Landing Pages") %></li>
                <li><%= access_link("Lookbooks") %></li>
              </ul>
            </li>
            <li class="submenu<%= ' active' if params[:controller] =~ /admins|roles|settings/ %>">
              <span>Site Management</span>
              <ul>
                <li><%= access_link("Admins") %></li>
                <li><%= access_link("Roles") %></li>
                <li><%= access_link("Settings") %></li>
              </ul>
            </li>
            <li class="submenu<%= ' active' if params[:controller] =~ /gift/ %>">
              <span>Gift Project</span>
              <ul>
                <li><%= access_link("Gift Occasion Types") %></li>
                <li><%= access_link("Gift Recipient Relations") %></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
      <div id="wrapper" class="wat-cf">
        <div class="flash">
          <% flash.each do |type, message| -%>
            <div class="message <%= type %>">
              <p><%= message %></p>
            </div>
          <% end -%>
        </div>
        <div id="main" class="<%= content_for?(:sidebar) ? 'sidebar' : 'nosidebar' %>">
          <div class="block">
            <% if content_for?(:secondary_navigation) %>
            <div class="secondary-navigation">
              <ul class="wat-cf">
                <%= yield :secondary_navigation %>
              </ul>
            </div>
            <% end %>
            <div class="content">
              <%= yield %>
            </div>
          </div>
          <div id="footer">
            <div class="block">
              <p>Copyright &copy; <%= Time.now.year %> olook</p>
            </div>
          </div>
        </div>
        <% if content_for?(:sidebar) %>
        <div id="sidebar">
          <%= yield :sidebar %>
        </div>
        <% end %>
      </div>
    </div>
  </body>
</html>
