<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8">
    <title>Olook Admin</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "admin" %>
    <%= javascript_include_tag "application" %>
  </head>
  <body>
    <div id="container">
      <div id="header">
        <h1><a href="/admin">olook Admin</a></h1>
        <div id="user-navigation">
          <ul class="wat-cf">
            <% if admin_signed_in? %>
              <li><%= link_to "Logout", destroy_admin_session_path, :class => 'logout', :method => :delete %></li>
            <% end %>
          </ul>
        </div>
        <div id="main-navigation">
          <ul class="wat-cf"></ul>
        </div>
      </div>    
      <div id="wrapper" class="wat-cf">
        <div class="flash">
          <% flash.each do |type, message| -%>
            <div class="message <%= type %>">
              <p><%= message %></p>
            </div>
          <% end -%>
        </div>
        <div id="main">
          <div class="block">
            <% if content_for? :secondary_navigation %>
            <div class="secondary-navigation">
              <ul class="wat-cf">
                <%= yield :secondary_navigation %>
              </ul>
            </div>
            <% end %>
            <div class="content">
              <%= yield %>
            </div>
          </div>
          <div id="footer">
            <div class="block">
              <p>Copyright &copy; <%= Time.now.year %> olook</p>
            </div>      
          </div>
        </div>
        <% if content_for? :sidebar %>
        <div id="sidebar">
          <%= yield :sidebar %>
        </div>
        <% end %>
      </div>
    </div>
  </body>
</html>
