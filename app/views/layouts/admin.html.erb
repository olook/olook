<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8">
    <title>Olook Admin</title>
    <%= favicon_link_tag 'olook_favicon.ico' %>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "admin" %>
    <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" %>
    <%= javascript_include_tag "admin" %>
    <%= yield :head %>
    <meta name = "viewport" content = "initial-scale = 1, user-scalable = no">
    <style>
      canvas{
        margin-top:30px;
      }
    </style>
  </head>
  <body>
    <div id="container">
      <div id="header">
        <h1><a href="/admin">olook Admin</a></h1>
        <div id="user-navigation">
          <ul class="wat-cf">
            <% if admin_signed_in? %>
              <li>Olá <%= "#{current_admin.first_name} #{current_admin.last_name}" %></li>
              <li><%= link_to "Sair", destroy_admin_session_path, :class => 'logout', :method => :delete %></li>
            <% end %>
          </ul>
        </div>
        <div id="main-navigation">
          <ul class="wat-cf">
            <li class="submenu<%= ' active' if params[:controller] =~ /users/ %>">
              <span>Clientes</span>
              <ul>
                <li><%= access_link("Users") %></li>
                <li><%= access_link("Credits") %></li>
                <li><%= link_to I18n.t("activerecord.models.discount.other"), admin_discounts_path %></li>
              </ul>
            </li>
            <li class="submenu<%= ' active' if params[:controller] =~ /orders|shipping|moip_callbacks|payments/ %>">
              <span>Vendas</span>
              <ul>
                <li><%= access_link("Orders") %></li>
                <li><%= access_link("Shipping Services") %></li>
                <li><%= access_link("Moip Callbacks") %></li>
                <li><%= access_link("Braspag Authorize Responses") %></li>
                <li><%= access_link("Braspag Capture Responses") %></li>
                <li><%= access_link("Payments") %></li>
                <li><%= link_to I18n.t("admin.billet.santander"), admin_new_billet_batch_path %></li>
              </ul>
            </li>
            <li class="submenu<%= ' active' if params[:controller] =~ /collections|moments|products/ %>">
              <span>Produtos</span>
              <ul>
                <li><%= access_link("Collections") %></li>
                <li><%= access_link("Collection Theme") %></li>
                <li><%= access_link("Products") %></li>
                <li><%= access_link("Brands") %></li>
              </ul>
            </li>
            <li class="submenu<%= ' active' if params[:controller] =~ /promotions|liquidation|coupons|landing|highlights/ %>">
              <span>Promoções</span>
              <ul>
                <li><%= access_link("Promotions")%></li>
                <li><%= access_link("Liquidations")%></li>
                <li><%= access_link("Campaigns")%></li>
                <li><%= access_link("Highlights")%></li>
                <li><%= access_link("Coupons") %></li>
                <li><%= access_link("Landing Pages") %></li>
                <li><%= access_link("Highlight Campaigns") %></li>
              </ul>
            </li>
            <li class="submenu<%= ' active' if params[:controller] =~ /admins|roles|settings/ %>">
              <span>Permissões</span>
              <ul>
                <li><%= access_link("Admins") %></li>
                <li><%= access_link("Roles") %></li>
                <li><%= access_link("Settings") %></li>
                <li><%= access_link("Holidays") %></li>
              </ul>
            </li>
            <li class="submenu<%= ' active' if params[:controller] =~ /gift/ %>">
              <span>Presentes</span>
              <ul>
                <li><%= access_link("Gift Occasion Types") %></li>
                <li><%= access_link("Gift Recipient Relations") %></li>
                <li><%= access_link("Gift Boxes") %></li>
              </ul>
            </li>
            <li class="submenu<%= ' active' if params[:controller] =~ /clippings/ %>">
              <span>Conteúdo</span>
              <ul>
                <li><%= access_link("Clippings")%></li>
                <li><%= link_to I18n.t("activerecord.models.catalog_header_catalog_base.other"), admin_catalog_bases_path(type: "text") %></li>
              </ul>
            </li>
            <li class="submenu<%= ' active' if params[:controller] =~ /simple_email_service/ %>">
              <span>Marketing</span>
              <ul>
                <li>
                  <%= link_to I18n.t("activerecord.models.simple_email_service_info.other"), admin_ses_path %>
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
      <div id="wrapper" class="wat-cf">
        <div class="flash">
          <% flash.each do |type, message| -%>
            <div class="message <%= type %>">
              <p><%= message %></p>
            </div>
          <% end -%>
        </div>
        <div id="main" class="<%= content_for?(:sidebar) ? 'sidebar' : 'nosidebar' %>">
          <div class="block">
            <% if content_for?(:secondary_navigation) %>
            <div class="secondary-navigation">
              <ul class="wat-cf">
                <%= yield :secondary_navigation %>
              </ul>
            </div>
            <% end %>
            <div class="content">
              <%= yield %>
            </div>
          </div>
          <div id="footer">
            <div class="block">
              <p>Copyright &copy; <%= Time.now.year %> olook</p>
            </div>
          </div>
        </div>
        <% if content_for?(:sidebar) %>
          <div id="sidebar">
            <%= yield :sidebar %>
          </div>
        <% end %>
      </div>
    </div>
    <%= yield :footer %>
  </body>
</html>
