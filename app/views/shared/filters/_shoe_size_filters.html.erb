<div class="filter main shoe_size">
  <p class="filter_type">Tamanho<%= image_tag 'collections/arrow-black.png', :class => 'model' %></p>
  <button type="button" class="clear_filter bt_clear_size">[ limpar ]</button>
    <ol class="column-size">
      <% collection_theme_presenter.collection_theme.catalog.shoe_sizes.each do |size, value| %>
        <% unless size.zero? %>
          <li>
            <%- size_checked = params[:shoe_sizes].to_a.empty? ? (current_user && current_user.shoes_size.to_s == size.to_s) : params[:shoe_sizes].to_a.include?(size.to_s) -%>
            <%= check_box_tag('shoe_sizes[]', size, size_checked, :id => "size_#{size}") %>
            <%= label_tag(size, nil, :for => "size_#{size}") %>
          </li>
        <% end %>
      <% end %>
    </ol>
<%= image_tag 'collections/arrow-white.png', :class => 'arrow arrow-size', style:"display:none" %>
</div>

