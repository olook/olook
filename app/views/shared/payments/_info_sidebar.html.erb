<div id="request_info">
  <%= yield :checkout_sidebar %>
  <div class="item">
    <h1>Meu Pedido <%= link_to "alterar", cart_path if @order.payment.nil? %></h1>
    <table cellpadding="0" cellspacing="0">
      <tfoot>
        <tr>
          <td>Total:</td>
          <td class="value"><%= number_to_currency(cart.total) %></td>
        </tr>
      </tfoot>
      <tbody>
        <tr>
          <td>Sub-total:</td>
          <td class="value"><%= number_to_currency(cart.subtotal)  %></td>
        </tr>
        <tr>
          <td>Cr√©dito</td>
          <td class="value credit">- <%= number_to_currency(cart.credits_discount) %></td>
        </tr>
        <% if @order.used_coupon %>
          <tr>
            <td>Cupom desconto</td>
            <td class="value credit">- <%= number_to_currency(cart.coupon_discount) %></td>
          </tr>
        <% end %>
        <tr>
          <td>Frete</td>
          <td class="value">+ <%= number_to_currency(cart.freight_price) %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
