<li class="product">
  <div class="box_product">
    <%= link_to product, :class => "product_link" do %>
      <%= image_tag(product.send(image_method ||= :showroom_picture) || "fake/showroom-product.png") %>
      <h1><%= product.name %></h1>
      <p class="warn">ESGOTADO</p>
    <% end %>
    <div class="line">
      <ol>
        <li>
          <%= link_to image_tag(product.color_sample.url || 'fake/no-color.png', :title => product.name), product %>
        </li>
      </ol>
      <span><%= number_to_currency product.price %></span>
    </div>
  </div>
</li>
