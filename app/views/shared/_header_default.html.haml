%header#new_header
  .new_content
    .box_right
      - if user_signed_in?
        .user
          %ul
            %li.first Olá, 
            %li.username
              = current_user.first_name
            %p.trade= link_to "Troca Fácil", troca_path, :class => "invite"
            %li.submenu
              = link_to "Minha Conta", user_orders_path, :id => "account"
              .my_account
                %ul
                  %li= link_to "Meus pedidos", user_orders_path
                  / <li></haml:block><haml:silent></haml:silent><haml:block></li>
                  %li.last= link_to "Meus créditos", user_credits_path
                  %li= link_to "Dados pessoais", edit_user_registration_path
                  %li= link_to "Endereços", user_addresses_path
                  %li= link_to "Sair", destroy_user_session_path, :method => :delete, onclick: track_event("Checkout","clickSignOut")
            %li SAC (11) 2626-3489
      - else
        %p.new_login
          = link_to "Entre", "javascript:void(0);", :rel => "sign-in-dropdown", :class => "trigger"
          &nbsp;ou&nbsp; #{link_to "Descubra seu estilo", wysquiz_path} 
          %p.sac
            SAC (11) 2626-3489
        .sign-in-dropdown.close
          = render "users/sessions/form_user"
    .box_bottom
      %ul.addons
        %li.search
          = render 'shared/search_bar'
        %li.wishlist
          =link_to "Wishlist", "#", :class=> ""
          %p.sub
            Você ainda não tem nada na sua lista de desejos
            %br
              aproveite e monte bla bla bla...
    .olook_logo
      %h1= link_to 'Olook', root_path
