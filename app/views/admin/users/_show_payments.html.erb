<h3>Pagamentos</h3>
<table class="table">
  <tr>
    <th>Ordem</th>
    <th>Tipo</th>
    <th>Valor</th>
    <th>Porcentagem</th>
    <th>Classificação</th>
    <th>Estado</th>
    <th>Mensagem</th>
    <th>Data</th>
  </tr>

<% user.payments.order('id desc').each do |payment| %>
  <tr>
    <td><%= link_to payment.order.number, admin_order_path(payment.order) if payment.order %></td>
    <td><%= link_to payment_with_origin(payment), admin_payment_path(payment) %></td>
    <td><%= number_to_currency payment.total_paid %></td>
    <td><%= number_to_percentage payment.percent, :precision => 2 %></td>
    <td><%= payment.gateway_status_reason %></td>
    <td><%= payment.state %></td>
    <td><%= payment.gateway_message %></td>
    <td><%= payment.created_at.to_s(:short) %></td>
  </tr>
<% end %>
</table>

