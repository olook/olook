<h2>Listing liquidations</h2>

<div class="inner">
  <table class="table">
    <tr>
      <th>Name</th>
      <th>Starts at</th>
      <th>Ends at</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @liquidations.each do |liquidation| %>
    <tr>
      <td><%= liquidation.name %></td>
      <td><%= liquidation.starts_at.strftime("%d/%m/%Y %H:%M") %></td>
      <td><%= liquidation.ends_at.strftime("%d/%m/%Y %H:%M") %></td>
      <td><%= link_to 'Products', admin_liquidation_products_path(liquidation)%></td>
      <td><%= link_to 'Show', admin_liquidation_path(liquidation) %></td>
      <td><%= link_to 'Carosel', admin_liquidation_carousels_path(liquidation) %></td>
      <td><%= link_to 'Edit', edit_admin_liquidation_path(liquidation) %></td>
      <td><%= link_to 'Destroy', admin_liquidation_path(liquidation), confirm: 'Are you sure?', method: :delete %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <% content_for :secondary_navigation do %>
    <li><%= link_to 'New Liquidation', new_admin_liquidation_path %></li>
  <% end %>
</div>  
