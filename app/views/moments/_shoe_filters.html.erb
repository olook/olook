<div class="filter main">
  <h1 class="shoes">Sapatos</h1>
  <ol>
    <li>
      <%= check_box_tag "select_all_shoes", 1, params[:select_all_shoes], :class => "select_all" %>
      <%= label_tag "select_all_shoes", "Todos os sapatos" %>
    </li>

  <% moment_presenter.moment.catalog.subcategories(Category::SHOE).each do |subcategory,label| %>
    <li>
      <%= check_box_tag('shoe_subcategories[]', subcategory, params[:shoe_subcategories] && params[:shoe_subcategories].include?(subcategory), :id => subcategory) %>
      <%= label_tag(label, nil, :for => subcategory) %>
    </li>
  <% end %>
  </ol>
</div>




