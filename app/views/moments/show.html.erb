<% present 'CollectionTheme', {:collection_theme => @collection_theme, :collection_themes => @collection_themes, :category_id => @category_id} do |collection_theme_presenter| %>
  <% content_for :head do %>
    <%= stylesheet_link_tag "section/moments" %>
    <meta name="chaordic:source" content="<%= @glasses ? "home/#{@glasses}": "home/#{section_name @pixel_information}"%>">
    <meta name="chaordic:user" content="<%= @chaordic_user %>">
    <meta name="chaordic:category" content="<%= @glasses ? "#{@glasses}" : "#{section_name @pixel_information}"%>">
  <% end %>

  <% content_for :footer do %>
    <%= javascript_include_tag "moments" %>
    <%= render :partial => "shared/metrics/criteo/listing_tracker", :locals => { :products => @products_id } %>
  <% end %>

  <!-- local onde o mostpopular será exibido -->
  <div class="chaordic mostpopular"></div>

  <!-- local onde o viewpersonalized será exibido -->
  <div class="chaordic viewpersonalized"></div>

  <!-- local onde o purchasepersonalized será exibido -->
  <div class="chaordic purchasepersonalized"></div>

  <div id="moments" class="content">
    <%= collection_theme_presenter.display_nav_bar %>
    <%= collection_theme_presenter.render_search_form %>
    <div id="products_container">
      <%= render "new_header_moments" %>

      <ul id="products">
        <%= render "products", :products => @catalog_products %>
      </ul>

      <div class="loading"></div>
      <%= will_paginate @catalog_products %>
    </div>
  </div>
  <%= msn_tags %>
  <%= render "shared/metrics/sociomantic/products", :products => @catalog_products,:categories_id => @categories_id %>
  <%= render "shared/metrics/nextperformance/category", category_id: @category_id %>
<% end %>
