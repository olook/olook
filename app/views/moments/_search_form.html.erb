<div id="filters_container">
  <%= form_for(update_moment_path, :url => update_moment_path, :method => :get, :remote => true, :html => {:id => "filter"}) do %>
      <%= hidden_field_tag('id', @collection_theme ? @collection_theme.id : nil) %>
      <%= hidden_field_tag('category_id', @category_id ? @category_id : nil) %>
      <%= hidden_field_tag('sort_filter') %>

      <%= collection_theme_presenter.display_shoe_filters %>
      <%= collection_theme_presenter.display_color_filters %>
      <%= collection_theme_presenter.display_shoe_size_filters %>
      <%= collection_theme_presenter.display_heel_filters %>
      <%= collection_theme_presenter.display_bag_filters %>
      <%= collection_theme_presenter.display_bag_color_filters %>
      <%= collection_theme_presenter.display_accessory_filters %>
      <%= collection_theme_presenter.display_cloth_filters %>
      <%= collection_theme_presenter.display_cloth_size_filters %>

    <% end %>
</div>
